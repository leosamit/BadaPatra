<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical"-->
        <!--android:id="@+id/list_item_layout">-->

        <android.support.v7.widget.CardView
        android:id="@+id/cardview_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/nliveo_white"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/transparent_black_gradient_shape" />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/img_thumbnail"
                android:layout_toRightOf="@+id/img_thumbnail">

                <RelativeLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_label_textView_list_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="14dp" />
                    <!--android:text="рдирд╛рдо:"-->

                    <TextView
                        android:id="@+id/textView_list_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/textview_label_textView_list_item"
                        android:layout_toRightOf="@+id/textview_label_textView_list_item"
                        android:text="asascac"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="14dp"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:src="@color/divider_grey"
                android:layout_below="@id/img_thumbnail"/>
        </RelativeLayout>


        </android.support.v7.widget.CardView>
    <!--</LinearLayout>-->


</RelativeLayout>
